@model IEnumerable<GuardEmpSignin.Models.EmpDetail>;

@{
    ViewData["Title"] = "Home Page";
    var Status = ViewBag.status;
}
@if(Status!=null)
{
<p>
    Status=@Status;
</p>
    
}
<div class="form-row"style="float:left;">

    @using (Html.BeginForm("EmpSignIn","Home",FormMethod.Get))
    {
        <label> First-Name</label>
        <input type="text" class="form-control form-control-lg" name="FirstName">
        <label> Last-Name</label><br>
        <input type="text" class="form-control form-control-lg" name="LastName"><br>
        <input type="submit" value="Submit">
    }
    @if(Model!=null)
    {
        <style>
             table, th, td {
                 border: 1px solid black;
             }
        </style>
        <table>
        @using (Html.BeginForm("ApproveReq", "Home", FormMethod.Post))
        {
            <tr>
                <th>Image</th>
                <th>First-Name</th>
                <th>Last-Name</th>
                <th>Select</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@Html.Label(item.EmpFirstNAame+" "+item.EmpLastName, new { @for = item.Id}) </td>*@
                <td><img src=@item.Photo width="150"/></td>
                <td>@item.EmpFirstname</td>
                <td>@item.EmpLastname</td>
                    <td> @Html.RadioButton("id", item.Id ,new {@id=item.Id}) </td>
                </tr>
            }
        <br><input type="submit" value="This is me!" class="border-light">
        }
        </table>
        
    } 
    <div style= "height:80px"></div>
</div>

